# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|

  config.vm.define "bind" do |bind|

    bind.vm.box = "debian/contrib-stretch64"
    bind.vm.network "private_network", ip:"172.16.12.1"
    bind.vm.network "forwarded_port", guest: 22, host: 2201, id:"ssh"
    # Need admin privileges to bind <1024 ports
    bind.vm.network "forwarded_port", guest: 53, host: 53, protocol: "udp"
    bind.vm.network "forwarded_port", guest: 53, host: 53, protocol: "tcp"
    bind.vm.synced_folder "../bind", "/bind"
    bind.vm.provision "shell", path: "provisionBind.sh"

  end

  config.vm.define "client" do |client|

    client.vm.box = "debian/contrib-stretch64"
    client.vm.network "private_network", ip:"172.16.12.2"
    client.vm.network "forwarded_port", guest: 22, host: 2202, id:"ssh"
    client.vm.provision "shell", path: "provisionClient.sh"

  end

  config.vm.define "rabbitmq" do |rabbitmq|

    rabbitmq.vm.box = "debian/contrib-stretch64"
    rabbitmq.vm.network "private_network", ip:"172.16.12.3"
    rabbitmq.vm.network "forwarded_port", guest: 22, host: 2203, id:"ssh"
    rabbitmq.vm.network "forwarded_port", guest: 15672, host: 15672, protocol: "tcp"
    rabbitmq.vm.provision "shell", path: "provisionrabbitmq.sh"

  end

end
